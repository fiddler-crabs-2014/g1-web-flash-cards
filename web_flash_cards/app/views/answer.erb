<div class="container">

  <div class="card">
    <p id="question"><%= @card.question %></p>
  </div>

  <div class="answer">
    <p id="answer"><%= @card.answer %></p>
  </div>

  <div id="submit_guess">

    <form method="POST" action="/round/<%= @deck.topic %>">
      <input type="text" name="user_input" class="user_guess">
      <input type="submit" value="guess" name="check_answer">
    </form>

  </div>

</div>

