<div class="container">

  <div class="account_container_wrapper">
    <h1 id="greeting">Hello, <%= @user.name.capitalize %>!</h1>

    <div class="account_container">

      <div class="stats">
        <h3>Account Stats</h3>
        <p>Rounds Played: <%= @rounds_played %></p>
        <p>Total Correct: <%= @total_correct %></p>
        <p>Total Incorrect: <%= @total_incorrect %></p>
        <p>Accuracy: <%= @accuracy.round(2) %>%</p>
      </div>

      <div class="public_decks">
        <h3>Public Decks</h3>
        <% @decks.each do |deck| %>
        <% @topic = deck.topic %>
        <form method='post' action='/round/<%=@topic%>'>
          <h4><input type='submit' value=<%=@topic%>>
        </form>
      <% end %>
      </div>

    </div>
  </div>
</div>
